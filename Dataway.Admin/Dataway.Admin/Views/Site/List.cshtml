@model SitesViewModel

<div class="header">
    <h2>Sites</h2>
    <a href="site/new" class="button">Create New Site</a>
</div>
<table>
    <tr>
        <th>Site</th>
        <th>URL</th>
        <th></th>
    </tr>
    @foreach (var site in Common.Sites)
    {
        <tr>
            <td><a href="/site/@site.Id">@site.Name</a></td>
            <td>
                <a href="@site.Url" target="_blank">@site.Url</a>
            </td>
            <td></td>
        </tr>
    }
</table>