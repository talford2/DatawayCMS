@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>CMS - Forgot Password</title>
    <link href="@Url.VersionedContent("~/Content/Style.min.css")" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="~/Images/favicon.png">
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
</head>
<body>
    <div class="outer-base">
        <div class="header">
            <div>
                <h1><a href="/"><span>Dataway <span>Cms</span></span></a></h1>
            </div>
        </div>
        <div class="base">
            <div class="login-panel">
                <h2>Forgot Password</h2>
                <p>Eneter your email address below and we'll send you a new password to login with, you can change this once logged in.</p>
                <form method="post">
                    <div class="field">
                        <label for="Email">Email Address</label>
                        <input type="text" name="Email" id="Email" autofocus />
                    </div>
                    <div class="button-container">
                        <input type="submit" value="Reset" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
